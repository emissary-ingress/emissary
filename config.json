{
  "unversioned": ["Makefile", "k8s.mk", "k8s/*"],
  "profiles": {
    "dev": {},
    "prod": {
      "REPO": "$(NAMESPACE)/$(NAME)"
    },
    "default": {
      "REGISTRY": "quay.io",
      "NAMESPACE": "datawire",
      "REPO": "$(NAMESPACE)/$(NAME)-$(PROFILE)",
      "VERSION": "$(HASH)",
      "RATELIMIT_IMAGE": "$(REGISTRY)/$(REPO):ratelimit-$(VERSION)",
      "PROXY_IMAGE": "$(REGISTRY)/$(REPO):proxy-$(VERSION)",
      "SIDECAR_IMAGE": "$(REGISTRY)/$(REPO):sidecar-$(VERSION)"
    }
  }
}
