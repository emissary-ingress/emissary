{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:443",
      "ssl_context": {"cert_chain_file": "/etc/ambassador-config/certs/tls.crt",
          "private_key_file": "/etc/ambassador-config/certs/tls.key","ca_cert_file": "/etc/ambassador-config/ca_cert_chain/tls.crt","require_client_certificate": true
      },"filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "access_log": [
              {
                "format": "ACCESS [%START_TIME%] \"%REQ(:METHOD)% %REQ(X-ENVOY-ORIGINAL-PATH?:PATH)% %PROTOCOL%\" %RESPONSE_CODE% %RESPONSE_FLAGS% %BYTES_RECEIVED% %BYTES_SENT% %DURATION% %RESP(X-ENVOY-UPSTREAM-SERVICE-TIME)% \"%REQ(X-FORWARDED-FOR)%\" \"%REQ(USER-AGENT)%\" \"%REQ(X-REQUEST-ID)%\" \"%REQ(:AUTHORITY)%\" \"%UPSTREAM_HOST%\"\n",
                "path": "/dev/fd/1"
              }
            ],
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "backend",
                  "domains": ["*"],
                  "routes": [
                    
                    {
                      "timeout_ms": 10000,"prefix": "/ambassador/v0/check_ready","prefix_rewrite": "/ambassador/v0/check_ready",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_127_0_0_1_8877", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/ambassador/v0/check_alive","prefix_rewrite": "/ambassador/v0/check_alive",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_127_0_0_1_8877", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/ambassador/v0/","prefix_rewrite": "/ambassador/v0/",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_127_0_0_1_8877", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/qotm/quote/","prefix_rewrite": "/quote/",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_qotm_cb_default", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/service/","prefix_rewrite": "/",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_qotm_cb_default_od_default", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/httpbin/","prefix_rewrite": "/","host_rewrite": "httpbin.org",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_http___httpbin_org", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/tspace/","prefix_rewrite": "/",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_qotm_tspace", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/google/","prefix_rewrite": "/","host_rewrite": "google.com",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_https___google_com_otls", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/evil/","prefix_rewrite": "/","headers": [{"name": ":method", "regex": false, "value": "GET"}],
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_qotm", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/evil/","prefix_rewrite": "/qotm/quote/","headers": [{"name": ":method", "regex": false, "value": "PUT"}],
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_http___qotm", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/qotm/","prefix_rewrite": "/",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_qotm", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    ,
                    
                    {
                      "timeout_ms": 10000,"prefix": "/grpc/","prefix_rewrite": "/",
                      "weighted_clusters": {
                          "clusters": [
                              
                                 { "name": "cluster_192_168_0_1_45", "weight": 100.0 }
                              
                          ]
                      }
                      
                    }
                    
                    
                  ]
                }
              ]
            },
            "filters": [
              { 
                "type": "decoder",
                "name": "extauth",
                "config": {"allowed_headers": ["x-qotm-session"], "cluster": "cluster_ext_auth", "path_prefix": "/extauth", "timeout_ms": 5000}
              },{ 
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }    
  ],
  "admin": {
    "address": "tcp://127.0.0.1:8001",
    "access_log_path": "/tmp/admin_access_log"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "cluster_127_0_0_1_8877",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://127.0.0.1:8877"
          }
          
        ]},
      {
        "name": "cluster_192_168_0_1_45",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin","features": "http2",        
        "hosts": [
          {
            "url": "tcp://192.168.0.1:45"
          }
          
        ]},
      {
        "name": "cluster_ext_auth",
        "connect_timeout_ms": 3000,
        "type": "logical_dns",
        "lb_type": "random",        
        "hosts": [
          {
            "url": "tcp://example-auth:3000"
          }
          
        ]},
      {
        "name": "cluster_http___httpbin_org",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://httpbin.org:80"
          }
          
        ]},
      {
        "name": "cluster_http___qotm",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://qotm:80"
          }
          
        ]},
      {
        "name": "cluster_https___google_com_otls",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://google.com:443"
          }
          
        ],
        "ssl_context": {
          
        }},
      {
        "name": "cluster_qotm",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://qotm:80"
          }
          
        ]},
      {
        "name": "cluster_qotm_cb_default",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://qotm:80"
          }
          
        ],
        "circuit_breakers": {
          "default": {
            "max_connections": 1,
            "max_pending_requests": 1,
            "max_retries": 3
          }
        }},
      {
        "name": "cluster_qotm_cb_default_od_default",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://qotm:80"
          }
          
        ],
        "circuit_breakers": {
          "default": {
            "max_connections": 1,
            "max_pending_requests": 1,
            "max_retries": 3
          }
        },
        "outlier_detection": {
          "consecutive_5xx": 5,
          "max_ejection_percent": 100,
          "interval_ms": 3000
        }},
      {
        "name": "cluster_qotm_tspace",
        "connect_timeout_ms": 3000,
        "type": "strict_dns",
        "lb_type": "round_robin",        
        "hosts": [
          {
            "url": "tcp://qotm.tspace:80"
          }
          
        ]}
      
    ]
  },
  "statsd_udp_ip_address": "127.0.0.1:8125",
  "stats_flush_interval_ms": 1000
}